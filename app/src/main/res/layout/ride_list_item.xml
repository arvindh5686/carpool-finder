<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/grid_margin"
    android:layout_marginRight="@dimen/grid_margin"
    android:layout_marginTop="@dimen/cell_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/cell_margin"
    android:clickable="true"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rlDetails">
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_profile_image"
                android:layout_centerVertical="true"
                android:paddingRight="16dp"
                android:focusableInTouchMode="false"
                android:focusable="false"
                />
            <!--</RelativeLayout>-->

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivProfile"
                android:layout_alignParentTop="true"
                android:text="First Last"
                android:textStyle="bold"
                android:focusableInTouchMode="false"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/tvSpotsAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFullName"
                android:layout_toRightOf="@+id/ivProfile"
                android:text="0 "
                android:focusableInTouchMode="false"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/tvStartLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSpotsAvailable"
                android:layout_toRightOf="@+id/ivProfile"
                android:text="Santa Clara"
                android:focusableInTouchMode="false"
                android:focusable="false"
                />

            <ImageView
                android:id="@+id/tvTo"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:src="@drawable/ic_right_arrow"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tvSpotsAvailable"
                android:layout_toRightOf="@+id/tvStartLoc"
                android:layout_toEndOf="@+id/tvStartLoc" />
            <!--<TextView-->
                <!--android:id="@+id/tvTo"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/tvSpotsAvailable"-->
                <!--android:layout_toRightOf="@+id/tvStartLoc"-->
                <!--android:paddingLeft="5dp"-->
                <!--android:paddingRight="5dp"-->
                <!--android:text="To"-->
                <!--android:focusableInTouchMode="false"-->
                <!--android:focusable="false"-->

                <!--/>-->

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSpotsAvailable"
                android:layout_toRightOf="@+id/tvTo"
                android:text="Santa Clara"
                android:focusableInTouchMode="false"
                android:focusable="false"

                />

            <TextView
                android:id="@+id/tvLeavingAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDestination"
                android:layout_toRightOf="@+id/ivProfile"
                android:text="Leaving at "
                android:focusableInTouchMode="false"
                android:focusable="false"

                />
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDestination"
                android:layout_toRightOf="@+id/tvLeavingAt"
                android:text="5:00"
                android:focusableInTouchMode="false"
                android:focusable="false"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rlButtons"
            android:layout_toRightOf="@+id/rlDetails"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ivReserve"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_belt_blue_dark"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivCancel"
                android:layout_alignBottom="@+id/ivReserve"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_cross"
                android:paddingBottom="10dp"

                />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
